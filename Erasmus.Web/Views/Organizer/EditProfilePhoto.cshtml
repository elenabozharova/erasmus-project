@model Erasmus.Domain.DTO.EditProfilePictureDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<head>
    <link rel="stylesheet" href="~/css/edit-profile.css" />
</head>

@if(!string.IsNullOrEmpty(Model.ProfilePhotoPath))
{
    <div class="profile-picture">
    <img src="~/images/@Model.ProfilePhotoPath"/>
    </div>
}

<form method="post" asp-controller="Organizer" asp-action="UploadPhoto" enctype="multipart/form-data">
    <input type="hidden" asp-for="UserId"/>
    <input type="file" asp-for="ProfilePhoto"/>
    <button type="submit" class="btn btn-primary">Change Photo</button>
</form>

