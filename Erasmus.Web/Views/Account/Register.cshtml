@using Erasmus.Domain.Domain
@model Erasmus.Domain.Identity.UserRegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="/css/registration.css" rel="stylesheet" type="text/css">
</head>
<div class="container-register">
   <img class="image" src="~/images/transparent-erasmus-logo.png" alt="logo"/>
    @Html.ValidationSummary()
    <form asp-action="Register" asp-controller="Account" method="post">
    <input type="hidden" asp-for="@Model.Role"/>
        <div class="registerdiv align-content-center text-center">
            <div class="title">
                <h1>Register</h1>
                <p>Create your new account!</p>
            </div>
            
             <div class="form-group">
                <div>
                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
            </div>
             <div class="form-group ">
                <div>
                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>

            <div class="form-group ">
                <div class=" btn-submit ">
                    <button type="submit" class="btn btn-primary btn-block button-signup">Sign Up</button>
                </div>
            </div>
        </div>
    </form>
</div>  