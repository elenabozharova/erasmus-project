@model Erasmus.Domain.Identity.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
   .field-validation-error { 
    color: red;
   }
</style>

<head>
    <link href="/css/login-page.css" rel="stylesheet" type="text/css">
</head>

<div class="container-login">
    <img class="image" src="~/images/transparent-erasmus-logo.png" alt="logo"/>

    <form asp-action="Login" asp-controller="Account" method="post">

        <div class="logindiv">
            <h1>Log in</h1>
            <p>Stay updated on your Erasmus projects</p>
            <div class="input">
                <div>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div>
                <div class="input">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <div>
                    <button type="submit" class="button margin-bot">Log in</button>
                </div>
                <a class="link" asp-action="Register" asp-controller="account">Don't have an account? Click to Register</a>
            </div>
        </div>
    </form>
</div>  