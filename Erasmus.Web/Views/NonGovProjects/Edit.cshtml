@{
}


<form id="create-project-form" asp-action="Edit" asp-controller="NonGovProjects" class="text-primary" enctype="multipart/form-data">
    <input asp-for="ProjectId" type="hidden" />
    <label>Title</label>
    <input class="form-control" asp-for="ProjectTitle" />
    <label>Description</label>
    <input class="form-control" asp-for="ProjectDescription" />
    <label>Start Date</label>
    @Html.EditorFor(z => z.StartDate, new { htmlAttributes = new { @class="form-control" }})
    <label>End Date</label>
    @Html.EditorFor(z => z.EndDate, new { htmlAttributes = new { @class="form-control" }})    <label>City</label>
    @Html.DropDownListFor(z => z.SelectedCityId, new SelectList(Model.Cities, "Value", "Text"), htmlAttributes: new { @class = "form-control", @Value = Model.SelectedCityId })
    <label>Project Photo:</label>
    <input type="file" asp-for="ProjectPhoto" class="ml-2 mb-3 mt-3"/>
    <input asp-for="ProjectPhotoPath" type="hidden" />
    <button type="submit" class="btn btn-lg btn-outline-primary mt-2 btn-block">Save</button>
</form>