@{
}

<form id="create-project-form" asp-action="Edit" asp-controller="NonGovProjects">
    <input asp-for="ProjectId" type="hidden" />
    <label>Title</label>
    <input class="form-control" asp-for="ProjectTitle" />
    <label>Description</label>
    <input class="form-control" asp-for="ProjectDescription" />
    <label>Start Date</label>
    <input type="date" class="form-control" asp-for="StartDate" value="@Model.StartDate" />
    <label>End Date</label>
    <input type="date" class="form-control" asp-for="EndDate" value="@Model.EndDate"/>
    <label>City</label>
    @Html.DropDownListFor(z => z.SelectedCityId, new SelectList(Model.Cities, "Value", "Text"), htmlAttributes: new { @class = "form-control"})
    <button type="submit" class="btn btn-outline-primary">Save</button>
</form>