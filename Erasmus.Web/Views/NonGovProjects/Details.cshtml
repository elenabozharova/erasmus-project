@model Erasmus.Domain.DTO.ProjectDetailsDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@await Component.InvokeAsync("Notyf") 


<div>
    <h1>@Model.ProjectTitle</h1>
    <h2>@Model.ProjectDescription</h2>
    <a asp-controller="Participant" asp-action="UploadFiles" asp-route-eventId="@Model.ProjectId" class="btn btn-primary">Apply</a>
    <hr />
    <h1>Uploaded files</h1>
    @{
        foreach(var file in Model.UploadedFilesForUser)
        {
            var fileId = file.Id;
            <h1>@file.FileType</h1>
            <hr />
            <h1>@file.FileName</h1>
            <a asp-controller="Participant" asp-action="ShowUploadedFile" asp-route-id="@fileId">Download</a>
        }
    }
</div>




