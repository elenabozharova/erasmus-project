@{
}


<head>
    <link href="/css/NonGovProjectsIndex.css" rel="stylesheet" type="text/css">
</head>

<div class="create-form">
    <h1 class="create-title">
        Create your project!
    </h1>
<form id="create-project-form" asp-action="Create" asp-controller="NonGovProjects" class="text-primary" enctype="multipart/form-data">
    <label>Title</label>
    <input class="form-control" asp-for="ProjectTitle" />
    <label>Description</label>
    <textarea class="form-control" asp-for="ProjectDescription"></textarea>
    <label>Start Date</label>
    <input type="date" class="form-control" asp-for="StartDate" />
    <label>End Date</label>
    <input type="date" class="form-control" asp-for="EndDate"/>

     <label>Deadline</label>
    @Html.EditorFor(z => z.Deadline, new { htmlAttributes = new { @class="form-control" }})    
    
    <label>City</label>
    @Html.DropDownListFor(z => z.SelectedCityId, new SelectList(Model.Cities, "Value", "Text"), htmlAttributes: new { @class = "form-control"})
    <label>Project Photo</label>
    <input type="file" asp-for="ProjectPhoto" class="mt-3 ml-2"/>
    <button type="submit" class="btn-create btn btn-outline-primary btn-block">Create</button>
</form>
</div>

